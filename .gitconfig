[user]
        email = marchal.dorian@gmail.com
        name = dorian-marchal

[push]
	default = upstream

[gui]
	gcwarning = false
	commitmsgwidth = 72
	fontui = -family Ubuntu -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Hasklig -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	encoding = utf-8

[core]
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX

[merge]
	tool = meld

[mergetool]
	keepBackup = false

[color]
	ui = true
